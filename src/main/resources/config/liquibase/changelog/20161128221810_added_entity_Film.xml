<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Film.
    -->
    <changeSet id="20161128221810-1" author="jhipster">
        <createTable tableName="film">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            
            <column name="year" type="integer">
                <constraints nullable="false" />
            </column>
            
            <column name="imdb" type="double">
                <constraints nullable="true" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="film_actors">
            <column name="actors_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="films_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="films_id, actors_id" tableName="film_actors"/>
        
        <createTable tableName="film_actors">
            <column name="actors_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="films_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="films_id, actors_id" tableName="film_actors"/>
        
        <createTable tableName="film_directors">
            <column name="directors_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="films_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="films_id, directors_id" tableName="film_directors"/>
        
        <createTable tableName="film_actor">
            <column name="actors_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="films_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="films_id, actors_id" tableName="film_actor"/>
        
        <createTable tableName="film_director">
            <column name="directors_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="films_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="films_id, directors_id" tableName="film_director"/>
        
    </changeSet>
</databaseChangeLog>
